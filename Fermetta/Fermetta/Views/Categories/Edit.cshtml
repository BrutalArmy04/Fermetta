@model Fermetta.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h3 class="text-success mb-0">
                <i class="bi bi-pencil-square"></i> Edit category
            </h3>
            <div class="text-muted small">Update category details and save changes.</div>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Category_Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Availability</label>
                        <div class="form-check mt-2">
                            <input class="form-check-input" asp-for="Disponibility" />
                            <label class="form-check-label" asp-for="Disponibility">
                                Category is available
                            </label>
                        </div>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check2-circle"></i> Save changes
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
