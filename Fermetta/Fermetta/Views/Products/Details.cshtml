@model Fermetta.Models.Product

@{
    ViewData["Title"] = "Product Details";
}
@{
    var backUrl = Context.Request.Headers["Referer"].ToString();

    // fallback safe (nu Index, ca sa nu dea Access Denied)
    if (string.IsNullOrWhiteSpace(backUrl))
    {
        backUrl = Url.Action("Catalog", "Products");
    }
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h3 class="text-success mb-1">
                        <i class="bi bi-info-circle"></i> @Model.Name
                    </h3>
                    <div class="text-muted small">
                        Product ID: @Model.Product_Id
                    </div>
                </div>

                <div class="text-end">
                    @if (Model.Stock > 0)
                    {
                        <span class="badge bg-success">In stock</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Out of stock</span>
                    }

                    @if (Model.Personalised)
                    {
                        <span class="badge bg-warning text-dark ms-2">
                            <i class="bi bi-stars"></i> Personalised
                        </span>
                    }
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted"
                         style="height: 220px;">
                        <span class="fs-1">🌱</span>
                    </div>

                    <div class="mt-3">
                        <div class="d-grid gap-2">
                            <a href="@backUrl" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to list
                            </a>


                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Product_Id" class="btn btn-outline-success">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <h5 class="mb-3">Product information</h5>

                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            <div class="text-muted small"><i class="bi bi-currency-exchange"></i> Price</div>
                            <div class="fs-5 fw-bold text-success">@Model.Price lei</div>
                        </div>

                        <div class="col-sm-6 mb-3">
                            <div class="text-muted small"><i class="bi bi-box-seam"></i> Stock</div>
                            <div class="fs-5 fw-semibold">@Model.Stock</div>
                        </div>

                        <div class="col-sm-6 mb-3">
                            <div class="text-muted small"><i class="bi bi-speedometer2"></i> Weight</div>
                            <div class="fw-semibold">@Model.Weight</div>
                        </div>

                        <div class="col-sm-6 mb-3">
                            <div class="text-muted small"><i class="bi bi-calendar-check"></i> Valability</div>
                            <div class="fw-semibold">@Model.Valability</div>
                        </div>

                        <div class="col-sm-12 mb-1">
                            <div class="text-muted small"><i class="bi bi-tag"></i> Category</div>
                            <div class="fw-semibold">
                                @(Model.Category != null ? Model.Category.Name : "—")
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-controller="Products" asp-action="Catalog" class="btn btn-success">
                            <i class="bi bi-grid-3x3-gap"></i> Go to catalog
                        </a>

                        @if (User.Identity != null && User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="m-0">
                                <input type="hidden" name="productId" value="@Model.Product_Id" />
                                <button type="submit" class="btn btn-outline-success">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </form>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
