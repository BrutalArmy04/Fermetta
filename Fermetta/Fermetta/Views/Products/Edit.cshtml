@model Fermetta.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h3 class="text-success mb-0">
                <i class="bi bi-pencil-square"></i> Edit product
            </h3>
            <div class="text-muted small">Update product details and save changes.</div>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Product_Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Stock" class="form-label"></label>
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Weight" class="form-label"></label>
                        <input asp-for="Weight" class="form-control" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Valability" class="form-label"></label>
                        <input asp-for="Valability" class="form-control" />
                        <span asp-validation-for="Valability" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Category_Id" class="form-label">Category</label>
                        <select asp-for="Category_Id" class="form-select" asp-items="ViewBag.Category_Id"></select>
                        <span asp-validation-for="Category_Id" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <div class="form-check mt-2">
                            <input class="form-check-input" asp-for="Personalised" />
                            <label class="form-check-label" asp-for="Personalised"></label>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check2-circle"></i> Save changes
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
