@model IEnumerable<Fermetta.Models.Product>

@{
    ViewData["Title"] = "Manage Products";
}

<div class="container py-4">

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="text-success m-0">Manage Products</h2>
            <p class="text-muted mb-0">Admin view: edit, update stock, and remove products.</p>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-outline-success">
                <i class="bi bi-plus-circle"></i> Add Product
            </a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-2">
        @foreach (var p in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">

                    @if (!string.IsNullOrEmpty(p.ImagePath))
                    {
                        <div class="card-img-top d-flex align-items-center justify-content-center bg-white" style="height: 140px; overflow:hidden;">
                            <img src="@p.ImagePath" alt="@p.Name" style="height: 100%; width: 100%; object-fit: cover;">
                        </div>
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center text-muted"
                             style="height: 140px;">
                            <span class="fs-1">🌿</span>
                        </div>
                    }
                    <div class="card-body">
                        <div class="d-flex align-items-start justify-content-between">
                            <h5 class="card-title mb-1">@p.Name</h5>

                            @if (p.Stock > 0)
                            {
                                <span class="badge bg-success">In stock</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Out of stock</span>
                            }
                        </div>

                        <div class="mt-2">
                            <div class="small text-muted">
                                <i class="bi bi-tag"></i>
                                Category:
                                <span class="text-dark">
                                    @(p.Category != null ? p.Category.Name : "—")
                                </span>
                            </div>

                            <div class="small text-muted">
                                <i class="bi bi-currency-exchange"></i>
                                Price:
                                <span class="text-success fw-bold">@p.Price lei</span>
                            </div>

                            <div class="small text-muted">
                                <i class="bi bi-box-seam"></i>
                                Stock:
                                <span class="text-dark fw-semibold">@p.Stock</span>
                            </div>

                            <div class="small text-muted">
                                <i class="bi bi-speedometer2"></i>
                                Weight:
                                <span class="text-dark">@p.Weight</span>
                            </div>

                            <div class="small text-muted">
                                <i class="bi bi-calendar-check"></i>
                                Validity:
                                <span class="text-dark">@p.Validity.ToString("dd.MM.yyyy")</span>
                            </div>

                            @if (p.Personalised)
                            {
                                <div class="mt-2">
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-stars"></i> Personalised
                                    </span>
                                </div>
                            }
                        </div>
                    </div>


                    <div class="card-footer bg-white border-top-0">
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@p.Product_Id" class="btn btn-outline-secondary">
                                <i class="bi bi-info-circle"></i> Details
                            </a>

                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@p.Product_Id" class="btn btn-outline-success">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a asp-action="Delete" asp-route-id="@p.Product_Id" class="btn btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>