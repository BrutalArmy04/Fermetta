@using Fermetta.Models
@model ApplicationUser

@{
    ViewData["Title"] = "User Details";
}

<h1>Details for User: @Model.UserName</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <h3>User Information</h3>
        <dl class="row">
            <dt class="col-sm-4">First Name</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>

            <dt class="col-sm-4">Last Name</dt>
            <dd class="col-sm-8">@Model.LastName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Registration Date</dt>
            <dd class="col-sm-8">@Model.RegistrationDate.ToShortDateString()</dd>

            <dt class="col-sm-4">Last Authentication</dt>
            <dd class="col-sm-8">@Model.LastAuthentiationDate.ToShortDateString()</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>

            <dt class="col-sm-4">Country</dt>
            <dd class="col-sm-8">@(Model.Country ?? "N/A")</dd>

            <dt class="col-sm-4">Postal Code</dt>
            <dd class="col-sm-8">@(Model.PostalCode?.ToString() ?? "N/A")</dd>

            <dt class="col-sm-4">User ID</dt>
            <dd class="col-sm-8">@Model.Id</dd>

        </dl>
    </div>

    <div class="col-md-6">
        <h3>Roles</h3>

        @* Afișare mesaje (succes/eroare) după o operațiune *@
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Message"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Error"]
            </div>
        }

        @if (ViewBag.Roles != null && ViewBag.Roles.Count > 0)
        {
            <ul>
                @foreach (var role in ViewBag.Roles)
                {
                    <li><strong>@role</strong></li>
                }
            </ul>
        }
        else
        {
            <p>This user has no assigned roles.</p>
        }

        @* Formularul de schimbare a rolului (Vizibil doar pentru Admini) *@
        @if (User.IsInRole("Admin"))
        {
            <div class="card p-3 mt-4">
                <h4>Change User Role</h4>

                @* Verificarea esențială: Nu se poate edita pe sine *@
                @if (Model.Id != ViewBag.CurrentUserId)
                {
                    <form method="post" asp-action="ChangeRole" asp-route-id="@Model.Id">
                        <div class="form-group mb-3">
                            <label for="newRole">Select New Role:</label>
                            <select name="newRole" id="newRole" class="form-control" asp-items="@Model.AllRoles">
                            </select>
                        </div>
                        <button type="submit" class="btn btn-warning">Apply Role Change</button>
                    </form>
                }
                else
                {
                    // Mesaj pentru cazul în care Adminul își vede propriul profil
                    <div class="alert alert-info mt-2">
                        You cannot modify your own role.
                    </div>
                }
            </div>
        }
    </div>
</div>
<div class="col-md-6">
    <h3>User Information</h3>
    <dl class="row">
    </dl>

    @* Adăugați linkul de Editare aici *@
    @if (Model.Id != ViewBag.CurrentUserId)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-2">Edit User Profile</a>
    }
</div>
<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to User List</a>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    @* De facut si update si delete *@
</div>