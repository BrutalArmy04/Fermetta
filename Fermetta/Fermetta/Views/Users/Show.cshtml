@using Fermetta.Models
@model ApplicationUser

@{
    ViewData["Title"] = "User Details";
}

<h1>Details for User: @Model.UserName</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <h3>User Information</h3>
        <dl class="row">
            <dt class="col-sm-4">First Name</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>

            <dt class="col-sm-4">Last Name</dt>
            <dd class="col-sm-8">@Model.LastName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Registration Date</dt>
            <dd class="col-sm-8">@Model.RegistrationDate.ToShortDateString()</dd>

            <dt class="col-sm-4">Last Authentication</dt>
            <dd class="col-sm-8">@Model.LastAuthentiationDate.ToShortDateString()</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>

            <dt class="col-sm-4">Country</dt>
            <dd class="col-sm-8">@(Model.Country ?? "N/A")</dd>

            <dt class="col-sm-4">Postal Code</dt>
            <dd class="col-sm-8">@(Model.PostalCode?.ToString() ?? "N/A")</dd>

            <dt class="col-sm-4">User ID</dt>
            <dd class="col-sm-8">@Model.Id</dd>

        </dl>
    </div>

    <div class="col-md-6">
        <h3>Roles</h3>
        @if (ViewBag.Roles != null && ViewBag.Roles.Count > 0)
        {
            <ul>
                @foreach (var role in ViewBag.Roles)
                {
                    <li>@role</li>
                }
            </ul>
        }
        else
        {
            <p>This user has no assigned roles.</p>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    @* De facut si update si delete *@
</div>