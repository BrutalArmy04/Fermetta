@model List<Fermetta.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container py-4">
    <h2 class="text-success mb-3">Manage Orders</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>User</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model)
                {
                    <tr>
                        <td>@o.OrderId</td>
                        <td>@o.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@(o.User?.Email ?? o.UserId)</td>
                        <td>
                            <span class="badge bg-secondary">@o.Status</span>
                        </td>
                        <td>@o.TotalAmount</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-success"
                               asp-action="Edit" asp-route-id="@o.OrderId">
                                Edit
                            </a>
                      
                            <form asp-action="Delete" asp-route-id="@o.OrderId" method="post" class="d-inline"
                                  onsubmit="return confirm('Delete order #@o.OrderId ? This cannot be undone.');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
