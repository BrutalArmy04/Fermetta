@model Fermetta.Models.Order

@{
    ViewData["Title"] = "Order Details (Admin)";
}

<div class="container py-5">
    <h2 class="text-success mb-3">Order #@Model.OrderId</h2>

    <p class="text-muted">
        User: <strong>@Model.User?.Email</strong><br />
        Date: @Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
    </p>

    <span class="badge bg-secondary mb-4">@Model.Status</span>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0">Products</h5>
        </div>

        <table class="table mb-0">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Category</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th class="text-end">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.Product?.Name</td>
                        <td>@item.Product?.Category?.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice RON</td>
                        <td class="text-end fw-bold">
                            @(item.Quantity* item.UnitPrice) RON
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="card-footer bg-white text-end">
            <strong>Total: </strong>
            <span class="fs-5 text-success">
                @Model.TotalAmount.ToString("0.00") RON
            </span>
        </div>
    </div>

    <!-- Schimbare status -->
    <form asp-action="ChangeStatus" method="post" class="d-flex gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.OrderId" />

        <select name="newStatus" class="form-select w-auto">
            @foreach (OrderStatus status in Enum.GetValues(typeof(OrderStatus)))
            {
                if (status != Model.Status)
                {
                    <option value="@status">@status</option>
                }
            }
        </select>

        <button type="submit" class="btn btn-success">
            Change Status
        </button>
    </form>

    <a asp-action="Index" class="btn btn-outline-secondary mt-4">
        ← Back to orders
    </a>
</div>
