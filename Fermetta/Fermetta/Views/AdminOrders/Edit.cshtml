@model Fermetta.Models.Order
@using Fermetta.Models

@{
    ViewData["Title"] = "Edit Order";
}

<div class="container py-4">
    <h2 class="text-success mb-3">Edit Order #@Model.OrderId</h2>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="OrderId" value="@Model.OrderId" />

                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select class="form-select" name="Status">
                                @foreach (OrderStatus s in Enum.GetValues(typeof(OrderStatus)))
                                {
                                    <option value="@s" selected="@(Model.Status == s)">
                                        @s
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Payment Method</label>
                            <select class="form-select" name="PaymentMethod">
                                @foreach (PaymentMethod pm in Enum.GetValues(typeof(PaymentMethod)))
                                {
                                    <option value="@pm" selected="@(Model.PaymentMethod == pm)">
                                        @pm
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Delivery Address</label>
                            <input class="form-control" name="DeliveryAddress" value="@Model.DeliveryAddress" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Observations</label>
                            <textarea class="form-control" name="Observations" rows="3">@Model.Observations</textarea>
                        </div>

                        <button type="submit" class="btn btn-success">Save</button>
                        <a asp-action="Manage" class="btn btn-outline-secondary">Back</a>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <strong>Items</strong>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var item in Model.OrderItems)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <div>
                                    <div class="fw-bold">@item.Product?.Name</div>
                                    <div class="text-muted">Qty: @item.Quantity</div>
                                </div>
                                <div class="fw-bold">
                                    @(item.Quantity* item.UnitPrice)
                                </div>
                            </li>
                        }
                    </ul>

                    <div class="mt-3 fw-bold">
                        Total: @Model.TotalAmount
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
