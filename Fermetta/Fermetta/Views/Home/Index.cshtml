@{
    ViewData["Title"] = "Home";
}

<div class="container py-4">

    <div class="card border-0 shadow-sm overflow-hidden mb-5">
        <div class="position-relative" style="min-height: 380px;">
            <div class="position-absolute top-0 start-0 w-100 h-100"
                 style="background-image:url('/images/home/hero.jpg'); background-size:cover; background-position:center;">
            </div>

            <div class="position-absolute top-0 start-0 w-100 h-100"
                 style="background: linear-gradient(90deg, rgba(0,0,0,.75) 0%, rgba(0,0,0,.35) 55%, rgba(0,0,0,0) 100%);">
            </div>

            <div class="position-relative p-4 p-md-5 text-white" style="max-width: 720px;">
                <span class="badge bg-success-subtle text-success border border-success-subtle mb-3">
                    Fresh • Local • Delicious
                </span>

                <h1 class="display-6 fw-bold mb-3">Good taste starts here.</h1>
                <p class="lead mb-4 text-white-50">
                    Discover real products. Fast delivery. Simple. Safe. Delicious.
                </p>

                <div class="d-flex flex-wrap gap-2">
                    <a asp-controller="Products" asp-action="Catalog" class="btn btn-success btn-lg">
                        <i class="bi bi-grid-3x3-gap me-2"></i> See Our Catalog
                    </a>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-tags me-2"></i> Explore Categories
                    </a>
                </div>
            </div>
        </div>
    </div>

    <section class="bg-white rounded-4 shadow-sm p-4 p-md-5 mb-5">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Why choose Fermetta?</h2>
            <p class="text-muted mb-0">
                Everything you need for a smooth and enjoyable shopping experience.
            </p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center h-100">
                    <i class="bi bi-bag-check fs-1 text-success mb-3"></i>
                    <h5>Quality Products</h5>
                    <p class="text-muted mb-0">
                        Carefully selected products with clear descriptions and verified quality.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="text-center h-100">
                    <i class="bi bi-truck fs-1 text-success mb-3"></i>
                    <h5>Fast Delivery</h5>
                    <p class="text-muted mb-0">
                        Order in just a few clicks — we’ll take care of the rest.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="text-center h-100">
                    <i class="bi bi-shield-lock fs-1 text-success mb-3"></i>
                    <h5>Secure & Reliable</h5>
                    <p class="text-muted mb-0">
                        Secure authentication, orders, and protected data.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="text-center py-5">
        <h3 class="fw-bold mb-3">Ready to start shopping?</h3>
        <p class="text-muted mb-4">
            Browse our catalog and discover products made for you.
        </p>
        <a asp-controller="Products" asp-action="Catalog" class="btn btn-success btn-lg px-5">
            <i class="bi bi-cart3 me-2"></i> Start Shopping
        </a>
    </section>

</div>
