@using Microsoft.AspNetCore.Identity
@inject SignInManager<Fermetta.Models.ApplicationUser> SignInManager

@{
    string Ctrl() => ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string Act() => ViewContext.RouteData.Values["action"]?.ToString() ?? "";

    string Active(string controller, string action = "")
    {
        var c = Ctrl();
        var a = Act();
        if (!string.IsNullOrEmpty(action))
            return (string.Equals(c, controller, StringComparison.OrdinalIgnoreCase) &&
                    string.Equals(a, action, StringComparison.OrdinalIgnoreCase)) ? "active fw-semibold" : "";
        return string.Equals(c, controller, StringComparison.OrdinalIgnoreCase) ? "active fw-semibold" : "";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fermetta</title>

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fermetta.styles.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-basket2-fill text-success"></i>
                    <span class="fw-bold">Fermetta</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link @Active("Home", "Index")" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>

                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("Products", "Catalog")" asp-controller="Products" asp-action="Catalog">
                                    <i class="bi bi-grid-3x3-gap me-1"></i> Catalog
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @Active("Categories", "Index")" asp-controller="Categories" asp-action="Index">
                                    <i class="bi bi-tags me-1"></i> Categories
                                </a>
                            </li>
                        }

                        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("User") || User.IsInRole("Contribuitor")))
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("ShoppingCart", "Index")" asp-controller="ShoppingCart" asp-action="Index">
                                    <i class="bi bi-cart3 me-1"></i> My Cart
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @Active("Orders", "PersonalOrders")" asp-controller="Orders" asp-action="PersonalOrders">
                                    <i class="bi bi-receipt me-1"></i> My Orders
                                </a>
                            </li>
                        }

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("Wishlist", "Index")" asp-controller="Wishlist" asp-action="Index">
                                    <i class="bi bi-heart me-1"></i> Wishlist
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Contribuitor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("ChangeRequests", "Create")" asp-controller="ChangeRequests" asp-action="Create">
                                    <i class="bi bi-plus-circle me-1"></i> Create a request
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle @(Ctrl() == "Products" || Ctrl() == "Categories" || Ctrl() == "Users" || Ctrl() == "AdminOrders" || Ctrl() == "ChangeRequests" ? "active fw-semibold" : "")"
                                   href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock me-1"></i> Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Products" asp-action="Index">
                                            <i class="bi bi-box-seam me-2"></i> Manage Products
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Categories" asp-action="Index">
                                            <i class="bi bi-tags me-2"></i> Manage Categories
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Users" asp-action="Index">
                                            <i class="bi bi-people me-2"></i> Show Current Users
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminOrders" asp-action="Manage">
                                            <i class="bi bi-truck me-2"></i> Manage Orders
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="ChangeRequests" asp-action="Inbox">
                                            <i class="bi bi-inbox me-2"></i> New Requests
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>

        @{
            var authMsg = TempData.Peek("AuthMessage") as string;
        }
        @if (!string.IsNullOrWhiteSpace(authMsg))
        {
            <div class="container mt-3">
                <div class="alert alert-info d-flex align-items-center gap-2 mb-0" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <div>@authMsg</div>
                </div>
            </div>
        }
    </header>

    <main role="main" class="py-4 flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>


    <footer class="border-top bg-white mt-auto">
        <div class="container py-3 d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
            <div class="text-muted small">
                &copy; 2025 - Fermetta
            </div>
            <div class="small">
                <a class="text-decoration-none" asp-controller="Home" asp-action="Privacy">
                    Privacy
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
